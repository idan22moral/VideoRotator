<Page x:Class="VideoRotator.RotatorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VideoRotator"
      mc:Ignorable="d" 
      d:DesignHeight="360" d:DesignWidth="480"
      Title="RotatorPage">

    <Grid>

        <Image x:Name="ThumbnailImage" Margin="10,54,10,115"/>
        <ToolBarOverflowPanel x:Name="OptionsContainer"   Margin="10,0,10,10" Height="100" VerticalAlignment="Bottom">
            <Image x:Name="RotateLeftImage" Width="220" Cursor="Hand" Source="Images/rotateLeft.png" MouseUp="RotateLeftImage_MouseUp"/>
            <Image x:Name="RotateRightImage" Width="220" Cursor="Hand" Source="Images/rotateRight.png" MouseUp="RotateRightImage_MouseUp"/>
        </ToolBarOverflowPanel>
        <WrapPanel Height="39" Margin="10,10,10,0" VerticalAlignment="Top">
            <Image Height="39" Width="39" Cursor="Hand" Source="Images/save.png" MouseUp="SaveChanges"/>
            <Image Height="39" Width="39" Cursor="Hand" Source="Images/cancel.png" MouseUp="CancelChanges"/>
        </WrapPanel>

    </Grid>
</Page>
