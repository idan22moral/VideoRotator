<Page x:Class="VideoRotator.DragDropPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VideoRotator"
      mc:Ignorable="d" 
      d:DesignHeight="360" d:DesignWidth="480"
      Title="DragDropPage" AllowDrop="True"
        DragEnter="Page_DragEnter" DragLeave="Page_DragLeave"
        Drop="Page_Drop">

    <Grid>
        <Rectangle x:Name="BackgroundRect" Fill="White" Stroke="Black" Grid.ColumnSpan="2"/>
        <Label x:Name="DragDropLabel" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="Drag &amp; Drop Video" Margin="9,105,10,105" HorizontalAlignment="Center" Width="453" FontFamily="Calibri" FontSize="48" FontWeight="Bold"/>
    </Grid>
</Page>
